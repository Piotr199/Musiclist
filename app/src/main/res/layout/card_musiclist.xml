<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"/>

        <TextView
                android:id="@+id/musiclistTitle"
                style="@style/LargeRedFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageIcon"
                android:fontFamily="cursive"/>
        <TextView
                android:id="@+id/musiclistArtist"
                style="@style/SubTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/musiclistTitle"
                android:layout_toRightOf="@+id/imageIcon"
                />
        <TextView
                android:id="@+id/musiclistGenre"
                style="@style/SubTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/musiclistArtist"
                android:layout_toRightOf="@+id/imageIcon"
                />

        <TextView
                android:id="@+id/musiclistDescription"
                style="@style/SubTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/musiclistGenre"
                android:layout_toRightOf="@+id/imageIcon"
                />

    </RelativeLayout>
</android.support.v7.widget.CardView>